generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Dino {
  id String @id @default(uuid())
  userId String

  name String @db.Text
  species String @db.Text
  photo String @db.Text
  price String @db.Text
  description String @db.Text
  length String @db.Text
  height String @db.Text
  period String @db.Text
  foundIn String @db.Text
  isPublished Boolean @default(false)

  orders Order[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id String @id @default(uuid())
  
  dinoId String @db.Text
  dinoName String @db.Text
  userId String @db.Text
  orderDate DateTime @default(now())
  orderEndDate DateTime @default(now())
  status String @db.Text
  totalAmount String @db.Text

  dino Dino @relation(fields: [dinoId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([dinoId])
  @@index([userId])
}